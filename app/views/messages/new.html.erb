<h1>Nuevo Mensaje</h1>

<div class="card">
  <div class="card-body">
    <p class="text-muted">Remitente: <%= current_user.first_name %> <%= current_user.last_name %></p>

    <%= form_with(model: @message, local: true) do |form| %>
      <% if @message.errors.any? %>
        <div class="alert alert-danger">
          <h2><%= pluralize(@message.errors.count, "error") %> impidieron guardar este mensaje:</h2>
          <ul>
            <% @message.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :chat_id, "Chat", class: "form-label" %>
        <%= form.collection_select :chat_id, Chat.all, :id, 
            ->(chat) { "Chat entre #{chat.sender.email} y #{chat.receiver.email}" }, 
            { selected: @message.chat_id }, 
            { class: "form-select" } %>
      </div>

      <div class="mb-3">
        <%= form.label :body, "Contenido", class: "form-label" %>
        <%= form.text_area :body, class: "form-control" %>
      </div>

      <div class="mt-3">
        <%= form.submit "Enviar Mensaje", class: "btn btn-primary" %>
        <%= link_to "Volver", :back, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>