<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header bg-dark text-white">
      <h2 class="mb-0">Chats</h2>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-dark">
            <tr>
              <th class="text-center" style="width: 5%">ID</th>
              <th style="width: 35%">Remitente</th>
              <th style="width: 35%">Destinatario</th>
              <th class="text-center" style="width: 15%">Mensajes</th>
              <th class="text-center" style="width: 10%">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @chats.each do |chat| %>
              <tr>
                <td class="text-center"><%= chat.id %></td>
                <td>
                  <div class="d-flex align-items-center">
                    <i class="bi bi-person-fill me-2 text-dark"></i>
                    <%= chat.sender.first_name %> <%= chat.sender.last_name %>
                  </div>
                </td>
                <td>
                  <div class="d-flex align-items-center">
                    <i class="bi bi-person me-2 text-dark"></i>
                    <%= chat.receiver.first_name %> <%= chat.receiver.last_name %>
                  </div>
                </td>
                <td class="text-center">
                  <span class="badge bg-dark rounded-pill">
                    <%= chat.messages.count %>
                  </span>
                </td>
                <td class="text-center">
                  <div class="btn-group">
                    <%= link_to chat_path(chat), class: 'btn btn-sm btn-dark', title: 'Ver chat' do %>
                      <i class="bi bi-chat-dots"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="container mt-4 text-center">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="d-grid gap-3">
        <%= link_to 'Crear Nuevo Chat', new_chat_path, class: "btn btn-dark btn-lg" %>
        <div class="btn-group">
          <%= link_to 'Ver Usuarios', users_path, class: "btn btn-outline-dark" %>
          <%= link_to 'Ver Mensajes', messages_path, class: "btn btn-outline-dark" %>
        </div>
      </div>
    </div>
  </div>
</div>