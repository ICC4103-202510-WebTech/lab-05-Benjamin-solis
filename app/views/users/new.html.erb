<div class="container mt-4">
  <h1>Nuevo Usuario</h1>

  <%= form_with(model: @user, local: true, class: 'needs-validation') do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@user.errors.count, "error") %> impidieron guardar este usuario:</h4>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :first_name, 'Nombre', class: 'form-label' %>
      <%= f.text_field :first_name, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :last_name, 'Apellido', class: 'form-label' %>
      <%= f.text_field :last_name, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password, 'Contraseña', class: 'form-label' %>
      <%= f.password_field :password, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, 'Confirmar Contraseña', class: 'form-label' %>
      <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
    </div>

    <div class="mt-4">
      <%= f.submit 'Crear Usuario', class: 'btn btn-primary' %>
      <%= link_to 'Cancelar', users_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
