<div class="mt-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Iniciar Sesión", new_session_path(resource_name), class: "btn btn-outline-dark btn-sm me-2" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Registrarse", new_registration_path(resource_name), class: "btn btn-outline-dark btn-sm me-2" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "btn btn-outline-dark btn-sm" %>
  <% end %>
</div> 